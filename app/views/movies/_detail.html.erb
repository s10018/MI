
<ul id="select">
  <li>
    <%= form_tag("/movies/select", :method => :post) do %>
      <%= select_tag 'select_order', options_for_select($select_order_list, "#{@order}"), 
          {:onchange => "this.form.submit();"} %>
    <% end %>
  </li>
  <li><input type="text" name="datepicker" id="datepicker"></input>
</ul>

<div id="test"></div>

  <div id="movie-list">
  
    <% @list.each_index do |i| %>
      <% if (i%$column) == 0 %><div id="row<%= i/$column + 1 %>" class="row"><% end %>
      <div class="image-frame">
        <span><%= "camera : #{get_info(@list[i],'camera')}" %></span>
        <%= link_to image_tag(@list[i], 
                              { :class => "camera-image", :border => '1', 
                                :alt => '', :witdh => $width * $scale, :height => $height * $scale }), 
            @list[i], { :class => "fancybox", :ref => "gallery", :alt => '', :caption => get_title(@list[i]) } %>
      </div> 
      <% if ((i+1)%$column) == 0 || i == @list.size %></div><% end %>
    <% end %>
</div>
  <div id="pager" class="pages">
    <span class="nextprev">« Previous</span>
    <span class="current">1</span>
    <a href="" title="Go to page 2">2</a>
    <a href="" title="Go to page 3">3</a>
    <a href="" title="Go to page 4">4</a>
    <a href="" title="Go to page 5">5</a>
    <span>...</span><a href="/page23" title="Go to page 23">23</a>
    <a href="/page24" title="Go to page 24">24</a>
    <a href="/page2" class="nextprev" title="Go to Next Page">Next »</a>
  </div>

</div>



