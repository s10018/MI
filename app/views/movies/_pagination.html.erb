
<div id="pagination-wrapper">
  <!-- prev button -->
  <a class="ui-button prev tips" id="minute-p" 
     title="
            <% if @list.size != 0 && @page != 1 %>
              <% if @mode == "date" || @mode == "part" %>
                <%= cal_time(@list[0].date,-1) %>
              <% else %>
                Prev Page
              <% end %>
            <% end %>
            ">
    <span class="ui-icon ui-icon-triangle-1-w"></span>
  </a>

  <!-- slider part -->
  <div id="pagination" class="sp-slider"></div>

  <!-- next button -->
  <a class="ui-button next tips" id="minute-n" 
     title="
            <% if @list.size != 0  && @page != @list.num_pages %>
              <% if @mode == "date" || @mode == "part" %>
                <%= cal_time(@list[0].date,1) %>
              <% else %>
                Next Page
              <% end %>
            <% end %>
            ">
    <span class="ui-icon ui-icon-triangle-1-e"></span>
  </a>

  <!-- Max of the pagination -->
  <%= hidden_field_tag(:max_page, @list.num_pages) %>

  <%= form_tag("/movies/#{@mode}", :method => :get) do %>

    <%= hidden_field_tag(:page, @page) %> 
    <%= hidden_field_tag(:mode, @mode) %>
    <%= hidden_field_tag(:showed, @showed) %>

    <% if @mode == "tag" %>
      <%= hidden_field_tag(:tag, @tags) %>
    <% end %>
    <% if @mode == "date" %>
      <%= hidden_field_tag(:date, @date) %>
    <% end %>
    <% if @mode == "camera" %>
      <%= hidden_field_tag(:camera, @camera) %>
    <% end %>
    <% if @mode == "part" %>
      <%= hidden_field_tag(:part_date, @date) %>
      <%= hidden_field_tag(:part, @part) %>
    <% end %>

  <% end %>
</div>
