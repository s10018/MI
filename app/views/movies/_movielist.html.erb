<div id="movie-list">
  <% if @list.size > 0 %>
    
    <% @list.each_index do |i| %>
      <div class="image-frame">
        <span><%= "camera : #{@list[i].camera}" %></span>
        <%= link_to image_tag(@list[i].path, 
                              { :class => "camera-image", 
                                :border => '1', 
                                :alt => '', 
                                :width => $width * $scale, 
                                :height => $height * $scale }
                              ), 
            "#image-full-#{i}", { :class => "camera-image-f", :alt => '', :caption => get_title(@list[i]) } %>
      </div>

      <div id="image-full-<%= i %>" class="image-full" style="display:none;">
        <%= image_tag(@list[i].path, { 
                        :class => "camera-image-full img-polaroid", 
                        :border => '1', 
                        :alt => '', 
                      }) %>
        <p>CAMERA:<%= @list[i].camera %></p> <p>DATE:<%= @list[i].date %></p>
        <p id="tag_info<%= @list[i].id %>">TAG:<%= @list[i].tag_list.join(" ") %></p>
        <%= form_tag("/movies/adding", :remote => true, 
                     :'data-type' => :json, :class => "tag_form form-inline span4 offset4") do %>
          <div class="information alert alert-info">「」を追加しました</div>
          <input class="span2 my-input addTagInput" name="addtag" type="text" />
          <button class="ui-button btn" name="id" value="<%= @list[i].id %>">タグを追加</button>
        <% end %>

      </div>
    <% end %>

  <% else %>
    <p>Movie nothing..</p>
  <% end %>
</div>
